@model WMS.Web.Models.LocationViewModel
@{
    ViewData["Title"] = "Location Details";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="bi bi-geo-alt"></i> Location Details</h4>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <!-- Basic Information -->
                <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Location Code</label>
                            <div class="fw-bold">@Model.Code</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Location Name</label>
                            <div class="fw-bold">@Model.Name</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Type</label>
                            <div><span class="badge bg-info">@Model.Type</span></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Capacity</label>
                            <div>@Model.Capacity m³</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Occupied Capacity</label>
                            <div>@Model.OccupiedCapacity m³</div>
                            @{
                                var utilization = Model.Capacity > 0 ? (Model.OccupiedCapacity / Model.Capacity * 100) : 0;
                                var utilizationClass = utilization > 90 ? "danger" : utilization > 70 ? "warning" : "success";
                            }
                            <div class="progress mt-2" style="height: 20px;">
                                <div class="progress-bar bg-@utilizationClass" role="progressbar" style="width: @utilization%" aria-valuenow="@utilization" aria-valuemin="0" aria-valuemax="100">
                                    @utilization.ToString("F1")%
                                </div>
                            </div>
                        </div>
                        @if (Model.ParentLocationId.HasValue && !string.IsNullOrEmpty(Model.ParentLocationName))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Parent Location</label>
                                <div>@Model.ParentLocationName</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Location Hierarchy Details -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Location Hierarchy</h5>
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="text-muted small">Zone</label>
                            <div>@(Model.Zone ?? "N/A")</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="text-muted small">Aisle</label>
                            <div>@(Model.Aisle ?? "N/A")</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="text-muted small">Rack</label>
                            <div>@(Model.Rack ?? "N/A")</div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Shelf</label>
                            <div>@(Model.Shelf ?? "N/A")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Bin</label>
                            <div>@(Model.Bin ?? "N/A")</div>
                        </div>
                    </div>
                </div>

                <!-- Audit Information -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Audit Information</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Created At</label>
                            <div>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.CreatedBy))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Created By</label>
                                <div>@Model.CreatedBy</div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Last Updated</label>
                                <div>@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Updated By</label>
                                <div>@Model.UpdatedBy</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    @if (Model.IsActive)
                    {
                        <form asp-action="Deactivate" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-secondary" onclick="return confirm('Are you sure you want to deactivate this location?');">
                                <i class="bi bi-x-circle"></i> Deactivate
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to activate this location?');">
                                <i class="bi bi-check-circle"></i> Activate
                            </button>
                        </form>
                    }
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this location? This action cannot be undone.');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
