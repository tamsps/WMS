@model WMS.Web.Models.ReceiveInboundViewModel
@{
    ViewData["Title"] = "Receive Inbound Order";
    var statusClass = Model.Status switch
    {
        "Pending" => "bg-secondary",
        "Received" => "bg-success",
        "Completed" => "bg-primary",
        "Cancelled" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Receive Inbound Order</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Inbound" asp-action="Index">Inbound Orders</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.ReferenceNumber</a></li>
                    <li class="breadcrumb-item active">Receive</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Please correct the following errors:</strong>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Receive" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ReferenceNumber" />
        <input type="hidden" asp-for="SupplierName" />
        <input type="hidden" asp-for="Status" />

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Order Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="text-muted small">Reference Number</label>
                                <div class="fw-bold">@Model.ReferenceNumber</div>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small">Supplier</label>
                                <div class="fw-bold">@Model.SupplierName</div>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small">Status</label>
                                <div>
                                    <span class="badge @statusClass">@Model.Status</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Receive Items</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Enter the quantity received for each item. The inventory will be updated when you submit.
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 25%;">Product</th>
                                        <th style="width: 20%;">Location</th>
                                        <th class="text-center" style="width: 12%;">Expected</th>
                                        <th class="text-center" style="width: 12%;">Already Received</th>
                                        <th class="text-center" style="width: 15%;">Receive Now</th>
                                        <th class="text-center" style="width: 8%;">UOM</th>
                                        <th style="width: 8%;">Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Items.Count; i++)
                                    {
                                        var item = Model.Items[i];
                                        var remaining = item.ExpectedQuantity - item.ReceivedQuantity;
                                        
                                        <tr>
                                            <td>
                                                <div class="fw-bold">@item.ProductName</div>
                                                <small class="text-muted">SKU: @item.ProductSku</small>
                                                <input type="hidden" name="Items[@i].ItemId" value="@item.ItemId" />
                                                <input type="hidden" name="Items[@i].ProductId" value="@item.ProductId" />
                                                <input type="hidden" name="Items[@i].ProductName" value="@item.ProductName" />
                                                <input type="hidden" name="Items[@i].ProductSku" value="@item.ProductSku" />
                                            </td>
                                            <td>
                                                <div class="fw-bold">@item.LocationName</div>
                                                <small class="text-muted">@item.LocationCode</small>
                                                <input type="hidden" name="Items[@i].LocationId" value="@item.LocationId" />
                                                <input type="hidden" name="Items[@i].LocationName" value="@item.LocationName" />
                                                <input type="hidden" name="Items[@i].LocationCode" value="@item.LocationCode" />
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@item.ExpectedQuantity</span>
                                                <input type="hidden" name="Items[@i].ExpectedQuantity" value="@item.ExpectedQuantity" />
                                            </td>
                                            <td class="text-center">
                                                @if (item.ReceivedQuantity > 0)
                                                {
                                                    <span class="badge bg-success">@item.ReceivedQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark">0</span>
                                                }
                                                <input type="hidden" name="Items[@i].ReceivedQuantity" value="@item.ReceivedQuantity" />
                                            </td>
                                            <td>
                                                <input type="number" 
                                                       class="form-control text-center" 
                                                       name="Items[@i].QuantityToReceive" 
                                                       value="@remaining" 
                                                       min="0" 
                                                       step="0.01" />
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@item.UOM</span>
                                                <input type="hidden" name="Items[@i].UOM" value="@item.UOM" />
                                            </td>
                                            <td>
                                                <input type="text" 
                                                       class="form-control form-control-sm" 
                                                       name="Items[@i].Notes" 
                                                       value="@item.Notes"
                                                       placeholder="Notes" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4 sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">Receiving Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Total Items:</span>
                            <span class="fw-bold">@Model.Items.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Total Expected:</span>
                            <span class="fw-bold">@Model.Items.Sum(i => i.ExpectedQuantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Already Received:</span>
                            <span class="fw-bold text-success">@Model.Items.Sum(i => i.ReceivedQuantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Remaining:</span>
                            <span class="fw-bold text-warning">@(Model.Items.Sum(i => i.ExpectedQuantity) - Model.Items.Sum(i => i.ReceivedQuantity))</span>
                        </div>
                        <hr />
                        
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Order Notes</label>
                                <div class="small">@Model.Notes</div>
                            </div>
                            <hr />
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-box-seam"></i> Receive Items
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
