@model WMS.Web.Models.ReceiveInboundViewModel
@{
    ViewData["Title"] = "Receive Inbound Order";
    var statusClass = Model.Status switch
    {
        "Draft" => "bg-secondary",
        "Receiving" => "bg-info",
        "Completed" => "bg-success",
        _ => "bg-secondary"
    };
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Receive Inbound Order</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Inbound" asp-action="Index">Inbound Orders</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.ReferenceNumber</a></li>
                    <li class="breadcrumb-item active">Receive</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Please correct the following errors:</strong>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Receive" method="post" id="receiveForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ReferenceNumber" />
        <input type="hidden" asp-for="SupplierName" />
        <input type="hidden" asp-for="Status" />

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Order Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="text-muted small">Reference Number</label>
                                <div class="fw-bold">@Model.ReferenceNumber</div>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small">Supplier</label>
                                <div class="fw-bold">@Model.SupplierName</div>
                            </div>
                            <div class="col-md-4">
                                <label class="text-muted small">Status</label>
                                <div>
                                    <span class="badge @statusClass">@Model.Status</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Receive Items</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Enter the actual quantity received for each item. You can receive partial quantities if needed.
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 25%;">Product</th>
                                        <th style="width: 20%;">Location</th>
                                        <th class="text-center" style="width: 15%;">Expected</th>
                                        <th class="text-center" style="width: 15%;">Previously Received</th>
                                        <th class="text-center" style="width: 15%;">Receive Now</th>
                                        <th class="text-center" style="width: 10%;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Items.Count; i++)
                                    {
                                        var item = Model.Items[i];
                                        var remaining = item.ExpectedQuantity - item.ReceivedQuantity;
                                        var rowClass = item.ReceivedQuantity >= item.ExpectedQuantity ? "table-success" : "";
                                        
                                        <tr class="@rowClass">
                                            <td>
                                                <div class="fw-bold">@item.ProductName</div>
                                                <small class="text-muted">SKU: @item.ProductSku</small>
                                                <input type="hidden" name="Items[@i].ItemId" value="@item.ItemId" />
                                                <input type="hidden" name="Items[@i].ProductId" value="@item.ProductId" />
                                                <input type="hidden" name="Items[@i].ProductName" value="@item.ProductName" />
                                                <input type="hidden" name="Items[@i].ProductSku" value="@item.ProductSku" />
                                            </td>
                                            <td>
                                                @item.LocationName
                                                <input type="hidden" name="Items[@i].LocationId" value="@item.LocationId" />
                                                <input type="hidden" name="Items[@i].LocationName" value="@item.LocationName" />
                                                <input type="hidden" name="Items[@i].LocationCode" value="@item.LocationCode" />
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@item.ExpectedQuantity</span>
                                                <input type="hidden" name="Items[@i].ExpectedQuantity" value="@item.ExpectedQuantity" />
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@item.ReceivedQuantity</span>
                                                <input type="hidden" name="Items[@i].ReceivedQuantity" value="@item.ReceivedQuantity" />
                                            </td>
                                            <td>
                                                <div class="input-group input-group-sm">
                                                    <button type="button" class="btn btn-outline-secondary" onclick="decrementQuantity(@i)">
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                    <input type="number" 
                                                           class="form-control text-center receive-quantity-input" 
                                                           name="Items[@i].QuantityToReceive" 
                                                           id="quantity_@i"
                                                           value="@remaining" 
                                                           min="0" 
                                                           max="@remaining"
                                                           onchange="updateTotals()"
                                                           style="max-width: 80px;" />
                                                    <button type="button" class="btn btn-outline-secondary" onclick="incrementQuantity(@i, @remaining)">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                </div>
                                                @if (remaining > 0)
                                                {
                                                    <small class="text-muted d-block text-center mt-1">
                                                        Remaining: @remaining
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-success d-block text-center mt-1">
                                                        <i class="bi bi-check-circle"></i> Complete
                                                    </small>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary" id="total_@i">
                                                    @(item.ReceivedQuantity + remaining)
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <label asp-for="Notes" class="form-label">Receiving Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any notes about this receiving session (e.g., damaged items, discrepancies, etc.)"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4 sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Receiving Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Total Items:</span>
                            <span class="fw-bold">@Model.Items.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Expected Quantity:</span>
                            <span class="fw-bold">@Model.Items.Sum(i => i.ExpectedQuantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Previously Received:</span>
                            <span class="fw-bold text-info">@Model.Items.Sum(i => i.ReceivedQuantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Receiving Now:</span>
                            <span class="fw-bold text-success" id="receivingNow">
                                @Model.Items.Sum(i => i.ExpectedQuantity - i.ReceivedQuantity)
                            </span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fw-bold">Total After Receiving:</span>
                            <span class="fw-bold text-primary" id="totalAfter">
                                @Model.Items.Sum(i => i.ExpectedQuantity)
                            </span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-down"></i> Save Receiving
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="fillAll()">
                                <i class="bi bi-clipboard-check"></i> Fill All Remaining
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="clearAll()">
                                <i class="bi bi-x-circle"></i> Clear All
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function incrementQuantity(index, max) {
            const input = document.getElementById('quantity_' + index);
            const currentValue = parseInt(input.value) || 0;
            if (currentValue < max) {
                input.value = currentValue + 1;
                updateTotals();
            }
        }

        function decrementQuantity(index) {
            const input = document.getElementById('quantity_' + index);
            const currentValue = parseInt(input.value) || 0;
            if (currentValue > 0) {
                input.value = currentValue - 1;
                updateTotals();
            }
        }

        function updateTotals() {
            let receivingNow = 0;
            const inputs = document.querySelectorAll('.receive-quantity-input');
            
            inputs.forEach((input, index) => {
                const quantity = parseInt(input.value) || 0;
                receivingNow += quantity;
                
                // Update individual total
                const previouslyReceived = parseInt(input.getAttribute('data-received') || document.querySelector(`input[name="Items[${index}].ReceivedQuantity"]`).value);
                const total = previouslyReceived + quantity;
                document.getElementById('total_' + index).textContent = total;
            });
            
            document.getElementById('receivingNow').textContent = receivingNow;
            
            // Calculate total after
            const expected = @Model.Items.Sum(i => i.ExpectedQuantity);
            const previouslyReceived = @Model.Items.Sum(i => i.ReceivedQuantity);
            const totalAfter = previouslyReceived + receivingNow;
            document.getElementById('totalAfter').textContent = totalAfter;
        }

        function fillAll() {
            const inputs = document.querySelectorAll('.receive-quantity-input');
            inputs.forEach(input => {
                const max = parseInt(input.getAttribute('max'));
                input.value = max;
            });
            updateTotals();
        }

        function clearAll() {
            const inputs = document.querySelectorAll('.receive-quantity-input');
            inputs.forEach(input => {
                input.value = 0;
            });
            updateTotals();
        }

        // Form validation
        document.getElementById('receiveForm').addEventListener('submit', function(e) {
            const inputs = document.querySelectorAll('.receive-quantity-input');
            let totalReceiving = 0;
            
            inputs.forEach(input => {
                totalReceiving += parseInt(input.value) || 0;
            });
            
            if (totalReceiving === 0) {
                e.preventDefault();
                alert('Please enter at least one quantity to receive.');
                return false;
            }
        });
    </script>
}
