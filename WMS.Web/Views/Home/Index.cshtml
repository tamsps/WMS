@model WMS.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4"><i class="bi bi-speedometer2"></i> Dashboard</h2>
    </div>
</div>

<div class="row g-3">
    <!-- Products Card -->
    <div class="col-md-4">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Total Products</h6>
                        <h2 class="card-title mb-0">@Model.TotalProducts</h2>
                    </div>
                    <div class="text-primary">
                        <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-outline-primary">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Locations Card -->
    <div class="col-md-4">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Total Locations</h6>
                        <h2 class="card-title mb-0">@Model.TotalLocations</h2>
                    </div>
                    <div class="text-success">
                        <i class="bi bi-geo-alt" style="font-size: 3rem;"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Location" asp-action="Index" class="btn btn-sm btn-outline-success">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Value Card -->
    <div class="col-md-4">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Inventory Value</h6>
                        <h2 class="card-title mb-0">$@Model.TotalInventoryValue.ToString("N0")</h2>
                    </div>
                    <div class="text-info">
                        <i class="bi bi-currency-dollar" style="font-size: 3rem;"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Inventory" asp-action="Index" class="btn btn-sm btn-outline-info">
                        View Levels <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-3">
    <!-- Pending Inbound Card -->
    <div class="col-md-4">
        <div class="card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Pending Inbound</h6>
                        <h2 class="card-title mb-0">@Model.PendingInbound</h2>
                    </div>
                    <div class="text-warning">
                        <i class="bi bi-box-arrow-in-down" style="font-size: 3rem;"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Inbound" asp-action="Index" class="btn btn-sm btn-outline-warning">
                        View Inbound <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Outbound Card -->
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Pending Outbound</h6>
                        <h2 class="card-title mb-0">@Model.PendingOutbound</h2>
                    </div>
                    <div class="text-danger">
                        <i class="bi bi-box-arrow-up" style="font-size: 3rem;"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Outbound" asp-action="Index" class="btn btn-sm btn-outline-danger">
                        View Outbound <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- In Transit Deliveries Card -->
    <div class="col-md-4">
        <div class="card border-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">In Transit</h6>
                        <h2 class="card-title mb-0">@Model.InTransitDeliveries</h2>
                    </div>
                    <div class="text-secondary">
                        <i class="bi bi-truck" style="font-size: 3rem;"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-controller="Delivery" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        View Deliveries <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2 d-md-flex">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle"></i> Add New Product
                    </a>
                    <a asp-controller="Inbound" asp-action="Create" class="btn btn-outline-success">
                        <i class="bi bi-box-arrow-in-down"></i> Create Inbound
                    </a>
                    <a asp-controller="Outbound" asp-action="Create" class="btn btn-outline-warning">
                        <i class="bi bi-box-arrow-up"></i> Create Outbound
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
