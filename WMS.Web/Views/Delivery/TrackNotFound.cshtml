@{
    ViewData["Title"] = "Tracking Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-exclamation-triangle text-warning" style="font-size: 60px;"></i>
            <h3 class="mt-3">Tracking Number Not Found</h3>
            <p class="text-muted">We couldn't find any delivery information for the tracking number you provided. Please double-check the number and try again.</p>
            <a asp-action="Track" asp-controller="Delivery" class="btn btn-primary mt-3"><i class="bi bi-search"></i> Try Again</a>
        </div>
    </div>
</div>
