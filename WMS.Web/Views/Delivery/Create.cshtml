@model WMS.Web.Models.CreateDeliveryViewModel
@{
    ViewData["Title"] = "Create Delivery";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Create Delivery</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Delivery" asp-action="Index">Deliveries</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Please correct the following errors:</strong>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Create" method="post" id="createDeliveryForm">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Shipment Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TrackingNumber" class="form-label">Tracking Number <span class="text-danger">*</span></label>
                                <input asp-for="TrackingNumber" class="form-control" placeholder="e.g., TRK-2024-001" />
                                <span asp-validation-for="TrackingNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="OutboundId" class="form-label">Outbound Order ID <span class="text-danger">*</span></label>
                                <input asp-for="OutboundId" class="form-control" placeholder="Enter outbound order ID" />
                                <div class="form-text">Enter the ID of the outbound order being delivered</div>
                                <span asp-validation-for="OutboundId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Carrier" class="form-label">Carrier <span class="text-danger">*</span></label>
                                <select asp-for="Carrier" class="form-select">
                                    <option value="">Select carrier...</option>
                                    <option value="FedEx">FedEx</option>
                                    <option value="UPS">UPS</option>
                                    <option value="DHL">DHL</option>
                                    <option value="USPS">USPS</option>
                                    <option value="Local Courier">Local Courier</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Carrier" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstimatedDeliveryDate" class="form-label">Estimated Delivery Date</label>
                                <input asp-for="EstimatedDeliveryDate" type="date" class="form-control" />
                                <span asp-validation-for="EstimatedDeliveryDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Recipient Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RecipientName" class="form-label">Recipient Name <span class="text-danger">*</span></label>
                                <input asp-for="RecipientName" class="form-control" placeholder="Enter recipient name" />
                                <span asp-validation-for="RecipientName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RecipientPhone" class="form-label">Contact Number <span class="text-danger">*</span></label>
                                <input asp-for="RecipientPhone" type="tel" class="form-control" placeholder="e.g., +1-234-567-8900" />
                                <span asp-validation-for="RecipientPhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label">Delivery Address <span class="text-danger">*</span></label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3" placeholder="Enter complete delivery address..."></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Delivery Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any special delivery instructions or notes..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4 sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Delivery Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="text-muted small">Tracking Number</label>
                            <div class="fw-bold" id="summaryTracking">-</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Carrier</label>
                            <div class="fw-bold" id="summaryCarrier">-</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Recipient</label>
                            <div class="fw-bold" id="summaryRecipient">-</div>
                        </div>
                        @{
                            var tomorrow = DateTime.Now.AddDays(1).ToString("MMMM dd, yyyy");
                        }
                        <div class="mb-3">
                            <label class="text-muted small">Estimated Delivery</label>
                            <div class="fw-bold" id="summaryEstimated">@tomorrow</div>
                        </div>
                        <hr>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <small>The delivery will be created with "Pending" status. Update the status as the delivery progresses.</small>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Create Delivery
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function updateSummary() {
            // Update tracking number
            const tracking = document.querySelector('input[name="TrackingNumber"]').value;
            document.getElementById('summaryTracking').textContent = tracking || '-';
            
            // Update carrier
            const carrier = document.querySelector('select[name="Carrier"]').value;
            document.getElementById('summaryCarrier').textContent = carrier || '-';
            
            // Update recipient
            const recipient = document.querySelector('input[name="RecipientName"]').value;
            document.getElementById('summaryRecipient').textContent = recipient || '-';
            
            // Update estimated date
            const estimatedDate = document.querySelector('input[name="EstimatedDeliveryDate"]').value;
            if (estimatedDate) {
                const date = new Date(estimatedDate);
                const options = { year: 'numeric', month: 'long', day: 'numeric' };
                document.getElementById('summaryEstimated').textContent = date.toLocaleDateString('en-US', options);
            }
        }

        // Add change event listeners
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('input[name="TrackingNumber"]').addEventListener('input', updateSummary);
            document.querySelector('select[name="Carrier"]').addEventListener('change', updateSummary);
            document.querySelector('input[name="RecipientName"]').addEventListener('input', updateSummary);
            document.querySelector('input[name="EstimatedDeliveryDate"]').addEventListener('change', updateSummary);
            
            // Set default estimated delivery date to tomorrow
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            const tomorrowStr = tomorrow.toISOString().split('T')[0];
            const estimatedDateInput = document.querySelector('input[name="EstimatedDeliveryDate"]');
            if (estimatedDateInput && !estimatedDateInput.value) {
                estimatedDateInput.value = tomorrowStr;
            }
            
            // Initial summary update
            updateSummary();
        });

        // Form validation
        document.getElementById('createDeliveryForm').addEventListener('submit', function(e) {
            const trackingNumber = document.querySelector('input[name="TrackingNumber"]').value.trim();
            const outboundId = document.querySelector('input[name="OutboundId"]').value.trim();
            const carrier = document.querySelector('select[name="Carrier"]').value;
            const recipientName = document.querySelector('input[name="RecipientName"]').value.trim();
            const recipientPhone = document.querySelector('input[name="RecipientPhone"]').value.trim();
            const shippingAddress = document.querySelector('textarea[name="ShippingAddress"]').value.trim();
            
            if (!trackingNumber || !outboundId || !carrier || !recipientName || !recipientPhone || !shippingAddress) {
                e.preventDefault();
                alert('Please fill in all required fields.');
                return false;
            }
        });
    </script>
}
