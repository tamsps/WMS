@{
    ViewData["Title"] = "Track Delivery";
    Layout = null; // Public page without authentication
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 0;
        }
        .track-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .track-card {
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        .timeline {
            position: relative;
            padding-left: 50px;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 20px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
        .timeline-item {
            position: relative;
            margin-bottom: 30px;
        }
        .timeline-marker {
            position: absolute;
            left: -38px;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            z-index: 1;
        }
        .timeline-success .timeline-marker {
            background: #d1e7dd;
            color: #0f5132;
        }
        .timeline-info .timeline-marker {
            background: #cff4fc;
            color: #055160;
        }
        .timeline-warning .timeline-marker {
            background: #fff3cd;
            color: #664d03;
        }
        .timeline-secondary .timeline-marker {
            background: #e2e3e5;
            color: #41464b;
        }
    </style>
</head>
<body>
    <div class="container track-container">
        <div class="text-center text-white mb-4">
            <h1 class="display-4 fw-bold"><i class="bi bi-truck"></i> Track Your Delivery</h1>
            <p class="lead">Enter your tracking number to see real-time delivery status</p>
        </div>

        <div class="card track-card mb-4">
            <div class="card-body p-4">
                <form method="get" asp-action="Track">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" 
                               name="trackingNumber" 
                               class="form-control" 
                               placeholder="Enter tracking number..." 
                               value="@ViewBag.TrackingNumber"
                               required />
                        <button class="btn btn-primary px-5" type="submit">
                            Track
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (ViewBag.Delivery != null)
        {
            var delivery = ViewBag.Delivery;
            var statusClass = delivery.Status switch
            {
                "Pending" => "bg-secondary",
                "In Transit" => "bg-info",
                "Out for Delivery" => "bg-warning text-dark",
                "Delivered" => "bg-success",
                "Failed" => "bg-danger",
                "Returned" => "bg-dark",
                _ => "bg-secondary"
            };

            <div class="card track-card">
                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">Tracking Number</h4>
                            <h2 class="mb-0"><code class="text-white">@delivery.TrackingNumber</code></h2>
                        </div>
                        <div class="text-end">
                            <span class="badge @statusClass fs-5">@delivery.Status</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold">CARRIER</label>
                            <div class="fs-5">
                                <i class="bi bi-truck text-primary"></i> @delivery.Carrier
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small fw-bold">RECIPIENT</label>
                            <div class="fs-5">@delivery.RecipientName</div>
                        </div>
                    </div>

                    @if (delivery.EstimatedDeliveryDate != null)
                    {
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-check fs-1 me-3"></i>
                                <div>
                                    <strong>Estimated Delivery</strong>
                                    <div class="fs-5">@delivery.EstimatedDeliveryDate.Value.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (delivery.ActualDeliveryDate != null)
                    {
                        <div class="alert alert-success mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle-fill fs-1 me-3"></i>
                                <div>
                                    <strong>Delivered</strong>
                                    <div class="fs-5">@delivery.ActualDeliveryDate.Value.ToString("MMMM dd, yyyy HH:mm")</div>
                                </div>
                            </div>
                        </div>
                    }

                    <h5 class="mb-3">Delivery Timeline</h5>
                    <div class="timeline">
                        @if (delivery.ActualDeliveryDate != null)
                        {
                            <div class="timeline-item timeline-success">
                                <div class="timeline-marker">
                                    <i class="bi bi-check-circle-fill"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Delivered</h6>
                                    <p class="text-muted mb-0">
                                        @delivery.ActualDeliveryDate.Value.ToString("MMMM dd, yyyy HH:mm")
                                    </p>
                                </div>
                            </div>
                        }

                        @if (delivery.Status == "Out for Delivery" || delivery.ActualDeliveryDate != null)
                        {
                            <div class="timeline-item timeline-@(delivery.ActualDeliveryDate != null ? "success" : "warning")">
                                <div class="timeline-marker">
                                    <i class="bi @(delivery.ActualDeliveryDate != null ? "bi-check-circle-fill" : "bi-truck")"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Out for Delivery</h6>
                                    <p class="text-muted mb-0">Package is with delivery driver</p>
                                </div>
                            </div>
                        }

                        @if (delivery.Status == "In Transit" || delivery.Status == "Out for Delivery" || delivery.ActualDeliveryDate != null)
                        {
                            <div class="timeline-item timeline-@(delivery.Status == "Out for Delivery" || delivery.ActualDeliveryDate != null ? "success" : "info")">
                                <div class="timeline-marker">
                                    <i class="bi @(delivery.Status == "Out for Delivery" || delivery.ActualDeliveryDate != null ? "bi-check-circle-fill" : "bi-arrow-repeat")"></i>
                                </div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">In Transit</h6>
                                    <p class="text-muted mb-0">Package is on the way</p>
                                </div>
                            </div>
                        }

                        <div class="timeline-item timeline-@(delivery.Status != "Pending" ? "success" : "secondary")">
                            <div class="timeline-marker">
                                <i class="bi @(delivery.Status != "Pending" ? "bi-check-circle-fill" : "bi-circle")"></i>
                            </div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Shipment Created</h6>
                                <p class="text-muted mb-0">
                                    @delivery.CreatedAt.ToString("MMMM dd, yyyy HH:mm")
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (delivery.Status == "Failed")
                    {
                        <div class="alert alert-danger mt-4">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Delivery Failed</strong>
                            <p class="mb-0">The delivery attempt was unsuccessful. Please contact the carrier for more information.</p>
                        </div>
                    }
                    else if (delivery.Status == "Returned")
                    {
                        <div class="alert alert-warning mt-4">
                            <i class="bi bi-arrow-return-left"></i>
                            <strong>Package Returned</strong>
                            <p class="mb-0">The package has been returned to sender.</p>
                        </div>
                    }

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-12">
                            <label class="text-muted small fw-bold">DELIVERY ADDRESS</label>
                            <div class="border rounded p-3 bg-light">
                                <i class="bi bi-geo-alt text-primary"></i> @delivery.ShippingAddress
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (ViewBag.TrackingNumber != null && ViewBag.Error != null)
        {
            <div class="card track-card">
                <div class="card-body p-5 text-center">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 72px;"></i>
                    <h3 class="mt-3">Tracking Number Not Found</h3>
                    <p class="text-muted">
                        We couldn't find any delivery information for tracking number: 
                        <strong>@ViewBag.TrackingNumber</strong>
                    </p>
                    <p class="text-muted mb-4">
                        Please check the tracking number and try again. If you believe this is an error, please contact customer support.
                    </p>
                    <a href="@Url.Action("Track", "Delivery")" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Try Again
                    </a>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
