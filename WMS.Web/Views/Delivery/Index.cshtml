@model WMS.Web.Models.DeliveryListViewModel
@{
    ViewData["Title"] = "Deliveries";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-truck text-primary"></i> Deliveries</h2>
            <p class="text-muted mb-0">Track and manage deliveries</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Delivery
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by tracking number, carrier..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="Pending" selected="@(ViewBag.StatusFilter == "Pending")">Pending</option>
                        <option value="In Transit" selected="@(ViewBag.StatusFilter == "In Transit")">In Transit</option>
                        <option value="Out for Delivery" selected="@(ViewBag.StatusFilter == "Out for Delivery")">Out for Delivery</option>
                        <option value="Delivered" selected="@(ViewBag.StatusFilter == "Delivered")">Delivered</option>
                        <option value="Failed" selected="@(ViewBag.StatusFilter == "Failed")">Failed</option>
                        <option value="Returned" selected="@(ViewBag.StatusFilter == "Returned")">Returned</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Reset
                    </a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tracking Number</th>
                            <th>Carrier</th>
                            <th>Recipient</th>
                            <th>Destination</th>
                            <th>Estimated Delivery</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                var statusClass = item.Status switch
                                {
                                    "Pending" => "bg-secondary",
                                    "In Transit" => "bg-info",
                                    "Out for Delivery" => "bg-warning text-dark",
                                    "Delivered" => "bg-success",
                                    "Failed" => "bg-danger",
                                    "Returned" => "bg-dark",
                                    _ => "bg-secondary"
                                };
                                
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none fw-bold">
                                            @item.TrackingNumber
                                        </a>
                                    </td>
                                    <td>
                                        <i class="bi bi-truck"></i> @item.Carrier
                                    </td>
                                    <td>
                                        <div>@item.RecipientName</div>
                                        @if (!string.IsNullOrEmpty(item.RecipientPhone))
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-telephone"></i> @item.RecipientPhone
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <small>@item.ShippingAddress</small>
                                    </td>
                                    <td>
                                        @if (item.EstimatedDeliveryDate.HasValue)
                                        {
                                            var isOverdue = item.EstimatedDeliveryDate.Value < DateTime.Now && item.Status != "Delivered";
                                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                @item.EstimatedDeliveryDate.Value.ToString("MMM dd, yyyy")
                                            </span>
                                            @if (isOverdue)
                                            {
                                                <br /><small class="text-danger"><i class="bi bi-exclamation-triangle"></i> Overdue</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">@item.Status</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Track" asp-route-trackingNumber="@item.TrackingNumber" class="btn btn-outline-info" title="Track Delivery" target="_blank">
                                                <i class="bi bi-geo-alt"></i>
                                            </a>
                                            @if (item.Status != "Delivered" && item.Status != "Failed" && item.Status != "Returned")
                                            {
                                                <a asp-action="UpdateStatus" asp-route-id="@item.Id" class="btn btn-outline-success" title="Update Status">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox fs-1"></i>
                                    <p class="mb-0">No deliveries found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@ViewBag.SearchTerm" asp-route-status="@ViewBag.StatusFilter">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@ViewBag.SearchTerm" asp-route-status="@ViewBag.StatusFilter">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@ViewBag.SearchTerm" asp-route-status="@ViewBag.StatusFilter">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
