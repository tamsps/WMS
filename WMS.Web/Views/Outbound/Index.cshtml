@model WMS.Web.Models.OutboundListViewModel
@{
    ViewData["Title"] = "Outbound Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-box-arrow-up text-primary"></i> Outbound Orders</h2>
            <p class="text-muted mb-0">Manage shipping and fulfillment orders</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Outbound Order
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by outbound number, customer..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="filterStatus" class="form-select">
                        <option value="">All Status</option>
                        <option value="Pending" selected="@(Model.FilterStatus == "Pending")">Pending</option>
                        <option value="Picking" selected="@(Model.FilterStatus == "Picking")">Picking</option>
                        <option value="Picked" selected="@(Model.FilterStatus == "Picked")">Picked</option>
                        <option value="Packed" selected="@(Model.FilterStatus == "Packed")">Packed</option>
                        <option value="Shipped" selected="@(Model.FilterStatus == "Shipped")">Shipped</option>
                        <option value="Cancelled" selected="@(Model.FilterStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Reset
                    </a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Outbound Number</th>
                            <th>Customer</th>
                            <th>Order Date</th>
                            <th>Items</th>
                            <th>Progress</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                var statusClass = item.Status switch
                                {
                                    "Pending" => "warning",
                                    "Picking" => "info",
                                    "Picked" => "primary",
                                    "Packed" => "secondary",
                                    "Shipped" => "success",
                                    "Cancelled" => "danger",
                                    _ => "secondary"
                                };
                                var progress = item.TotalItems > 0 ? (item.PickedItems * 100 / item.TotalItems) : 0;
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="fw-bold">@item.OutboundNumber</a>
                                        @if (!string.IsNullOrEmpty(item.OrderNumber))
                                        {
                                            <br /><small class="text-muted">Ref: @item.OrderNumber</small>
                                        }
                                    </td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.TotalItems items</span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px; min-width: 100px;">
                                            <div class="progress-bar bg-@statusClass" style="width: @(progress)%">@(progress)%</div>
                                        </div>
                                        <small class="text-muted">@item.PickedItems / @item.TotalItems picked</small>
                                    </td>
                                    <td><span class="badge bg-@statusClass">@item.Status</span></td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (item.Status == "Pending")
                                            {
                                                <a asp-action="Pick" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Pick Items">
                                                    <i class="bi bi-check-circle"></i> Pick
                                                </a>
                                            }
                                            @if (item.Status == "Picked")
                                            {
                                                <a asp-action="Ship" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Ship Order">
                                                    <i class="bi bi-truck"></i> Ship
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="bi bi-inbox fs-1 text-muted"></i>
                                    <p class="text-muted">No outbound orders found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterStatus="@Model.FilterStatus">Previous</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-route-pageNumber="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterStatus="@Model.FilterStatus">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterStatus="@Model.FilterStatus">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
