@model WMS.Web.Models.OutboundViewModel
@{
    ViewData["Title"] = "Outbound Order Details";
    var statusClass = Model.Status switch
    {
        "Pending" => "bg-secondary",
        "Picking" => "bg-warning",
        "Picked" => "bg-info",
        "Packed" => "bg-primary",
        "Shipped" => "bg-success",
        "Cancelled" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Outbound Order Details</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Outbound" asp-action="Index">Outbound Orders</a></li>
                    <li class="breadcrumb-item active">@Model.OutboundNumber</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            @if (Model.Status == "Pending")
            {
                <a asp-action="Pick" asp-route-id="@Model.Id" class="btn btn-info">
                    <i class="bi bi-box-seam"></i> Pick Items
                </a>
            }
            @if (Model.Status == "Picked" || Model.Status == "Packed")
            {
                <a asp-action="Ship" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-truck"></i> Ship Order
                </a>
            }
            @if (Model.Status != "Shipped" && Model.Status != "Cancelled")
            {
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                    <i class="bi bi-x-circle"></i> Cancel Order
                </button>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

