@model WMS.Web.Models.InventoryTransactionListViewModel
@{
    ViewData["Title"] = "Inventory Transactions";
    var inventoryId = ViewBag.InventoryId as int?;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history"></i> Inventory Transaction History</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Inventory
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="row g-3 mb-3">
                @if (inventoryId.HasValue)
                {
                    <input type="hidden" name="inventoryId" value="@inventoryId" />
                }
                <div class="col-md-3">
                    <select name="filterType" class="form-select">
                        <option value="">All Types</option>
                        <option value="In" selected="@(Model.FilterType == "In")">In (Receipts)</option>
                        <option value="Out" selected="@(Model.FilterType == "Out")">Out (Shipments)</option>
                        <option value="Adjustment" selected="@(Model.FilterType == "Adjustment")">Adjustment</option>
                        <option value="Transfer" selected="@(Model.FilterType == "Transfer")">Transfer</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control" placeholder="Start Date" />
                </div>
                <div class="col-md-3">
                    <input type="date" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control" placeholder="End Date" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-action="Transactions" asp-route-inventoryId="@inventoryId" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>

            @if (Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date/Time</th>
                                <th>Product</th>
                                <th>Location</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Balance After</th>
                                <th>Reference</th>
                                <th>Notes</th>
                                <th>By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                var typeClass = transaction.TransactionType switch
                                {
                                    "In" => "success",
                                    "Out" => "danger",
                                    "Adjustment" => "warning",
                                    "Transfer" => "info",
                                    _ => "secondary"
                                };
                                var typeIcon = transaction.TransactionType switch
                                {
                                    "In" => "bi-arrow-down-circle",
                                    "Out" => "bi-arrow-up-circle",
                                    "Adjustment" => "bi-pencil-square",
                                    "Transfer" => "bi-arrow-left-right",
                                    _ => "bi-circle"
                                };

                                <tr>
                                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <strong>@transaction.ProductSKU</strong><br />
                                        <small class="text-muted">@transaction.ProductName</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@transaction.LocationCode</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@typeClass">
                                            <i class="@typeIcon"></i> @transaction.TransactionType
                                        </span>
                                    </td>
                                    <td>
                                        <span class="@(transaction.Quantity >= 0 ? "text-success" : "text-danger")">
                                            @(transaction.Quantity >= 0 ? "+" : "")@transaction.Quantity
                                        </span>
                                    </td>
                                    <td><strong>@transaction.BalanceAfter</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.ReferenceType) && transaction.ReferenceId.HasValue)
                                        {
                                            <small>
                                                @transaction.ReferenceType #@transaction.ReferenceId
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.Notes))
                                        {
                                            <small>@transaction.Notes</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.CreatedBy))
                                        {
                                            <small>@transaction.CreatedBy</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) of @Model.TotalCount transactions
                    </div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Transactions" asp-route-inventoryId="@inventoryId" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize" asp-route-filterType="@Model.FilterType" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">Previous</a>
                            </li>
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Transactions" asp-route-inventoryId="@inventoryId" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize" asp-route-filterType="@Model.FilterType" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Transactions" asp-route-inventoryId="@inventoryId" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize" asp-route-filterType="@Model.FilterType" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> No transaction history found.
                </div>
            }
        </div>
    </div>
</div>
