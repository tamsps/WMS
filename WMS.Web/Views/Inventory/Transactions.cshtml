@model WMS.Web.Models.InventoryTransactionListViewModel
@{
    ViewData["Title"] = "Inventory Transactions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-clock-history"></i> Inventory Transactions</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Inventory" asp-action="Index">Inventory</a></li>
                    <li class="breadcrumb-item active">Transactions</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Inventory
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="card-title mb-0">Transaction History</h5>
                    @if (ViewBag.InventoryId != null)
                    {
                        <small class="text-muted">Showing transactions for specific inventory record</small>
                    }
                </div>
                <div class="col-md-6">
                    <form method="get" class="d-flex gap-2">
                        <input type="hidden" name="inventoryId" value="@ViewBag.InventoryId" />
                        <select name="filterType" class="form-select">
                            <option value="">All Types</option>
                            <option value="Inbound" selected="@(Model.FilterType == "Inbound" ? "selected" : null)">Inbound</option>
                            <option value="Outbound" selected="@(Model.FilterType == "Outbound" ? "selected" : null)">Outbound</option>
                        </select>
                        <input type="date" name="startDate" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
                        <input type="date" name="endDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i> Filter
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Transaction #</th>
                                <th>Type</th>
                                <th>Product</th>
                                <th>Location</th>
                                <th>Quantity</th>
                                <th>Balance Before</th>
                                <th>Balance After</th>
                                <th>Date</th>
                                <th>Reference</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>
                                        <code>@transaction.TransactionNumber</code>
                                    </td>
                                    <td>
                                        @if (transaction.TransactionType == "Inbound")
                                        {
                                            <span class="badge bg-success">Inbound</span>
                                        }
                                        else if (transaction.TransactionType == "Outbound")
                                        {
                                            <span class="badge bg-danger">Outbound</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@transaction.TransactionType</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@transaction.ProductName</strong><br />
                                        <small class="text-muted">@transaction.ProductSKU</small>
                                    </td>
                                    <td>
                                        <strong>@transaction.LocationCode</strong>
                                    </td>
                                    <td class="text-end">
                                        @if (transaction.TransactionType == "Inbound")
                                        {
                                            <span class="text-success">+@transaction.Quantity.ToString("N2")</span>
                                        }
                                        else if (transaction.TransactionType == "Outbound")
                                        {
                                            <span class="text-danger">-@transaction.Quantity.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span>@transaction.Quantity.ToString("N2")</span>
                                        }
                                    </td>
                                    <td class="text-end">@transaction.BalanceBefore.ToString("N2")</td>
                                    <td class="text-end">@transaction.BalanceAfter.ToString("N2")</td>
                                    <td>@transaction.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.ReferenceNumber))
                                        {
                                            <small>@transaction.ReferenceNumber</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Transaction pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Transactions" asp-route-inventoryId="@ViewBag.InventoryId" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize" asp-route-filterType="@Model.FilterType" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">
                                        Previous
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Transactions" asp-route-inventoryId="@ViewBag.InventoryId" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize" asp-route-filterType="@Model.FilterType" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Transactions" asp-route-inventoryId="@ViewBag.InventoryId" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize" asp-route-filterType="@Model.FilterType" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">
                                        Next
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clock-history fs-1 text-muted"></i>
                    <h5 class="mt-3">No transactions found</h5>
                    <p class="text-muted">This inventory record has no transaction history yet.</p>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Back to Inventory
                    </a>
                </div>
            }
        </div>
    </div>
</div>
