@model WMS.Web.Models.InventoryListViewModel
@{
    ViewData["Title"] = "Inventory Stock Levels";
    var locations = ViewBag.Locations as List<WMS.Web.Models.LocationViewModel> ?? new List<WMS.Web.Models.LocationViewModel>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-boxes"></i> Inventory Stock Levels</h2>
        <a asp-action="Transactions" class="btn btn-info">
            <i class="bi bi-clock-history"></i> View Transactions
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form method="get" class="row g-3 mb-3">
                <div class="col-md-6">
                    <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by product SKU or name..." />
                </div>
                <div class="col-md-3">
                    <select name="filterLocation" class="form-select">
                        <option value="">All Locations</option>
                        @foreach (var location in locations)
                        {
                            <option value="@location.Id" selected="@(Model.FilterLocation == location.Id.ToString())">@location.Code - @location.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>

            @if (Model.Inventories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product SKU</th>
                                <th>Product Name</th>
                                <th>Location</th>
                                <th>Quantity</th>
                                <th>UOM</th>
                                <th>Reorder Level</th>
                                <th>Max Level</th>
                                <th>Status</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var inventory in Model.Inventories)
                            {
                                var statusClass = "success";
                                var statusText = "Normal";
                                
                                if (inventory.ReorderLevel.HasValue && inventory.Quantity <= inventory.ReorderLevel.Value)
                                {
                                    statusClass = "danger";
                                    statusText = "Low Stock";
                                }
                                else if (inventory.MaxStockLevel.HasValue && inventory.Quantity >= inventory.MaxStockLevel.Value)
                                {
                                    statusClass = "warning";
                                    statusText = "Overstock";
                                }

                                <tr>
                                    <td>@inventory.ProductSKU</td>
                                    <td>@inventory.ProductName</td>
                                    <td>
                                        <span class="badge bg-secondary">@inventory.LocationCode</span><br />
                                        <small class="text-muted">@inventory.LocationName</small>
                                    </td>
                                    <td><strong>@inventory.Quantity</strong></td>
                                    <td>@inventory.UOM</td>
                                    <td>@(inventory.ReorderLevel?.ToString() ?? "N/A")</td>
                                    <td>@(inventory.MaxStockLevel?.ToString() ?? "N/A")</td>
                                    <td>
                                        <span class="badge bg-@statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        @inventory.LastUpdated.ToString("yyyy-MM-dd HH:mm")
                                        @if (!string.IsNullOrEmpty(inventory.LastUpdatedBy))
                                        {
                                            <br /><small class="text-muted">by @inventory.LastUpdatedBy</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Transactions" asp-route-inventoryId="@inventory.Id" class="btn btn-sm btn-secondary" title="History">
                                                <i class="bi bi-clock-history"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) of @Model.TotalCount records
                    </div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterLocation="@Model.FilterLocation">Previous</a>
                            </li>
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterLocation="@Model.FilterLocation">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterLocation="@Model.FilterLocation">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> No inventory records found.
                </div>
            }
        </div>
    </div>
</div>
