@model WMS.Web.Models.InventoryListViewModel
@{
    ViewData["Title"] = "Inventory";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-boxes"></i> Inventory Management</h2>
            <p class="text-muted mb-0">Manage stock levels across products and locations</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Inventory
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="card-title mb-0">Inventory Records</h5>
                </div>
                <div class="col-md-6">
                    <form method="get" class="d-flex gap-2">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search by product..." value="@Model.SearchTerm" />
                        <select name="filterLocation" class="form-select">
                            <option value="">All Locations</option>
                            @if (ViewBag.Locations != null)
                            {
                                foreach (var location in (List<WMS.Web.Models.LocationViewModel>)ViewBag.Locations)
                                {
                                    <option value="@location.Id" selected="@(Model.FilterLocation == location.Id.ToString() ? "selected" : null)">@location.Name (@location.Code)</option>
                                }
                            }
                        </select>
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i> Filter
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Inventories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th>Location</th>
                                <th>Quantity On Hand</th>
                                <th>Reserved</th>
                                <th>Available</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var inventory in Model.Inventories)
                            {
                                <tr>
                                    <td>
                                        <strong>@inventory.ProductName</strong><br />
                                        <small class="text-muted">@inventory.ProductSKU</small>
                                    </td>
                                    <td>
                                        <strong>@inventory.LocationName</strong><br />
                                        <small class="text-muted">@inventory.LocationCode</small>
                                    </td>
                                    <td class="text-end">@inventory.QuantityOnHand.ToString("N2")</td>
                                    <td class="text-end">@inventory.QuantityReserved.ToString("N2")</td>
                                    <td class="text-end">@inventory.QuantityAvailable.ToString("N2")</td>
                                    <td>@inventory.LastUpdated.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@inventory.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-action="Transactions" asp-route-inventoryId="@inventory.Id" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-clock-history"></i> History
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Inventory pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterLocation="@Model.FilterLocation">
                                        Previous
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterLocation="@Model.FilterLocation">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize" asp-route-searchTerm="@Model.SearchTerm" asp-route-filterLocation="@Model.FilterLocation">
                                        Next
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-boxes fs-1 text-muted"></i>
                    <h5 class="mt-3">No inventory records found</h5>
                    <p class="text-muted">Start by adding inventory for your products.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First Inventory Record
                    </a>
                </div>
            }
        </div>
    </div>
</div>
