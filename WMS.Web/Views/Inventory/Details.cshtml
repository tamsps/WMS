@model WMS.Web.Models.InventoryViewModel
@{
    ViewData["Title"] = "Inventory Details";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="bi bi-boxes"></i> Inventory Details</h4>
                @{
                    var statusClass = "success";
                    var statusText = "Normal Stock";
                    
                    if (Model.ReorderLevel.HasValue && Model.Quantity <= Model.ReorderLevel.Value)
                    {
                        statusClass = "danger";
                        statusText = "Low Stock Alert";
                    }
                    else if (Model.MaxStockLevel.HasValue && Model.Quantity >= Model.MaxStockLevel.Value)
                    {
                        statusClass = "warning";
                        statusText = "Overstock Alert";
                    }
                }
                <span class="badge bg-@statusClass">@statusText</span>
            </div>
            <div class="card-body">
                <!-- Product Information -->
                <h5 class="border-bottom pb-2 mb-3">Product Information</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Product SKU</label>
                            <div class="fw-bold">@Model.ProductSKU</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Product Name</label>
                            <div class="fw-bold">@Model.ProductName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Unit of Measure</label>
                            <div>@Model.UOM</div>
                        </div>
                    </div>
                </div>

                <!-- Location Information -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Location Information</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Location Code</label>
                            <div><span class="badge bg-secondary">@Model.LocationCode</span></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Location Name</label>
                            <div>@Model.LocationName</div>
                        </div>
                    </div>
                </div>

                <!-- Stock Information -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Stock Information</h5>
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Current Quantity</h6>
                                <h2 class="text-primary">@Model.Quantity</h2>
                                <small class="text-muted">@Model.UOM</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Reorder Level</h6>
                                <h2 class="@(Model.ReorderLevel.HasValue && Model.Quantity <= Model.ReorderLevel.Value ? "text-danger" : "text-secondary")">
                                    @(Model.ReorderLevel?.ToString() ?? "N/A")
                                </h2>
                                <small class="text-muted">@Model.UOM</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted">Max Stock Level</h6>
                                <h2 class="@(Model.MaxStockLevel.HasValue && Model.Quantity >= Model.MaxStockLevel.Value ? "text-warning" : "text-secondary")">
                                    @(Model.MaxStockLevel?.ToString() ?? "N/A")
                                </h2>
                                <small class="text-muted">@Model.UOM</small>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.ReorderLevel.HasValue || Model.MaxStockLevel.HasValue)
                {
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label class="text-muted small">Stock Level Visualization</label>
                            @{
                                var reorderPercent = Model.ReorderLevel.HasValue && Model.MaxStockLevel.HasValue 
                                    ? (Model.ReorderLevel.Value / Model.MaxStockLevel.Value * 100) 
                                    : 0;
                                var currentPercent = Model.MaxStockLevel.HasValue 
                                    ? Math.Min(Model.Quantity / Model.MaxStockLevel.Value * 100, 100) 
                                    : 0;
                                var barClass = currentPercent < reorderPercent ? "danger" : currentPercent > 100 ? "warning" : "success";
                            }
                            <div class="progress" style="height: 30px;">
                                <div class="progress-bar bg-@barClass" role="progressbar" style="width: @currentPercent%" aria-valuenow="@currentPercent" aria-valuemin="0" aria-valuemax="100">
                                    @currentPercent.ToString("F1")%
                                </div>
                            </div>
                            @if (Model.ReorderLevel.HasValue)
                            {
                                <small class="text-muted">Reorder at @reorderPercent.ToString("F0")% (@Model.ReorderLevel @Model.UOM)</small>
                            }
                        </div>
                    </div>
                }

                <!-- Last Update Information -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Last Update</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Last Updated</label>
                            <div>@Model.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.LastUpdatedBy))
                    {
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">Updated By</label>
                                <div>@Model.LastUpdatedBy</div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Actions -->
                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Transactions" asp-route-inventoryId="@Model.Id" class="btn btn-info">
                        <i class="bi bi-clock-history"></i> View Transaction History
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
