@model WMS.Web.Models.ProductViewModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="bi bi-box-seam"></i> Product Details</h4>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <!-- Basic Information -->
                <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">SKU</label>
                            <div class="fw-bold">@Model.SKU</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Name</label>
                            <div class="fw-bold">@Model.Name</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Category</label>
                            <div>@(Model.Category ?? "N/A")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Unit of Measure</label>
                            <div>@Model.UOM</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small">Barcode</label>
                            <div>@(Model.Barcode ?? "N/A")</div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <label class="text-muted small">Description</label>
                        <div>@Model.Description</div>
                    </div>
                }

                <!-- Dimensions & Weight -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Dimensions & Weight</h5>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="text-muted small">Weight</label>
                            <div>@Model.Weight kg</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="text-muted small">Length</label>
                            <div>@Model.Length cm</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="text-muted small">Width</label>
                            <div>@Model.Width cm</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="text-muted small">Height</label>
                            <div>@Model.Height cm</div>
                        </div>
                    </div>
                </div>

                <!-- Stock Management -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Stock Management</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Reorder Level</label>
                            <div>@Model.ReorderLevel @Model.UOM</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Maximum Stock Level</label>
                            <div>@Model.MaxStockLevel @Model.UOM</div>
                        </div>
                    </div>
                </div>

                <!-- Audit Information -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Audit Information</h5>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="text-muted small">Created At</label>
                            <div>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.CreatedBy))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Created By</label>
                                <div>@Model.CreatedBy</div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Last Updated</label>
                                <div>@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                        {
                            <div class="mb-3">
                                <label class="text-muted small">Updated By</label>
                                <div>@Model.UpdatedBy</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    @if (Model.IsActive)
                    {
                        <form asp-action="Deactivate" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-secondary" onclick="return confirm('Are you sure you want to deactivate this product?');">
                                <i class="bi bi-x-circle"></i> Deactivate
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Activate" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to activate this product?');">
                                <i class="bi bi-check-circle"></i> Activate
                            </button>
                        </form>
                    }
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product? This action cannot be undone.');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
