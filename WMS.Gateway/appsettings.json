{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/products/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "locations-route": {
        "ClusterId": "locations-cluster",
        "Match": {
          "Path": "/locations/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "inbound-route": {
        "ClusterId": "inbound-cluster",
        "Match": {
          "Path": "/inbound/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "outbound-route": {
        "ClusterId": "outbound-cluster",
        "Match": {
          "Path": "/outbound/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "delivery-route": {
        "ClusterId": "delivery-cluster",
        "Match": {
          "Path": "/delivery/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "https://localhost:5001"
          }
        }
      },
      "products-cluster": {
        "Destinations": {
          "products-api": {
            "Address": "https://localhost:5002"
          }
        }
      },
      "locations-cluster": {
        "Destinations": {
          "locations-api": {
            "Address": "https://localhost:5003"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "inventory-api": {
            "Address": "https://localhost:5006"
          }
        }
      },
      "inbound-cluster": {
        "Destinations": {
          "inbound-api": {
            "Address": "https://localhost:5004"
          }
        }
      },
      "outbound-cluster": {
        "Destinations": {
          "outbound-api": {
            "Address": "https://localhost:5005"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "payment-api": {
            "Address": "https://localhost:5007"
          }
        }
      },
      "delivery-cluster": {
        "Destinations": {
          "delivery-api": {
            "Address": "https://localhost:5008"
          }
        }
      }
    }
  }
}
